<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_login_huella_icon"
            android:layout_width="@dimen/login_rl_panel_w"
            android:layout_height="@dimen/login_rl_panel_h"
            android:background="@color/colorBitsafeBlue">

            <ImageView
                android:id="@+id/iv_login_huella_icon_bitsafe"
                android:layout_width="@dimen/login_iv_icon_w"
                android:layout_height="@dimen/login_iv_icon_h"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/aplicacion_ic_bitsafe_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_login_huella_icon">

            <TextView
                android:id="@+id/tv_login_huella_contrasenia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="@string/login_huella_introduce"
                android:textColor="@color/colorBitsafeBlue" />

            <LinearLayout
                android:id="@+id/panel_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_login_huella_contrasenia"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login_huella_pin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_pin_pin" />

                <ImageView
                    android:id="@+id/iv_login_huella_pin_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_pin_pin" />

                <ImageView
                    android:id="@+id/iv_login_huella_pin_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_pin_pin" />

                <ImageView
                    android:id="@+id/iv_login_huella_pin_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_pin_pin" />


            </LinearLayout>

            <GridLayout
                android:id="@+id/teclado_numerico_login_huella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/panel_pin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:columnCount="3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login_huella_uno_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="1"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_dos_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="2"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />


                <Button
                    android:id="@+id/btn_login_huella_tres_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="3"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_cuatro_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="4"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_cinco_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="5"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_seis_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="6"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_siete_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="7"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />


                <Button
                    android:id="@+id/btn_login_huella_ocho_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="8"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_nueve_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="9"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_emply_celular"
                    android:layout_width="@dimen/login_huella_btn_emply_celular_w"
                    android:layout_height="@dimen/login_huella_btn_emply_celular_h"
                    android:layout_row="0"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/ic_finger_print"
                    android:enabled="false"
                    android:gravity="center|right"
                    android:textColor="@color/colorBitsafeBlue" />

                <Button
                    android:id="@+id/btn_login_huella_cero_celular"
                    android:layout_margin="2dp"
                    android:background="@drawable/registro_figura_texto_redondo"
                    android:text="0"
                    android:textColor="@color/colorBitsafeBlue"
                    android:textSize="@dimen/login_btn_tamanio_numeros" />

                <Button
                    android:id="@+id/btn_login_huella_borrar_celular"
                    android:layout_width="@dimen/login_huella_btn_borrar_celular_w"
                    android:layout_height="@dimen/login_huella_btn_borrar_celular_h"
                    android:layout_row="0"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/ic_delete"
                    android:gravity="center|right"
                    android:textColor="@color/colorBitsafeBlue" />

            </GridLayout>

            <TextView
                android:id="@+id/tv_login_huella_registrarse"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_huella_tv_registrarse_h"
                android:layout_alignBottom="@+id/teclado_numerico_login_huella"
                android:layout_alignParentBottom="true"
                android:alpha="0.60"
                android:background="@color/colorBitsafeBlue"
                android:gravity="center"
                android:text="@string/login_huella_registro"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>


    </RelativeLayout>
</ScrollView>