<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_renglon_relative_marco_transaccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registro_figura_texto_redondo">

        <LinearLayout
            android:id="@+id/ly_renglon_transaccion_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_transacciones_agregar_monto"
                android:textColor="@color/colorBitsafeBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_renglon_transaccion_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**************" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_renglon_transaccion_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_renglon_transaccion_monto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_finanzas_transacciones_categoria"
                android:textColor="@color/colorBitsafeBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_renglon_transaccion_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**************" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_renglon_transaccion_categoria">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_transacciones_descripcion"
                android:textColor="@color/colorBitsafeBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_renglon_transaccion_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**************" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_renglon_transaccion_imagen_banco"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_banco_bogota" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_renglon_transaccion_imagen_banco"
            android:layout_toLeftOf="@+id/tv_renglon_transaccion_fecha"
            android:text="@string/fragment_finanzas_transacciones_fecha"
            android:textColor="@color/colorBitsafeBlue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_renglon_transaccion_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_renglon_transaccion_imagen_banco"
            android:layout_alignParentRight="true"
            android:text="**/**/**" />

    </RelativeLayout>

</LinearLayout>