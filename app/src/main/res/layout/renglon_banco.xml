<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_renglon_relative_marco_banco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/registro_figura_texto_redondo">

        <LinearLayout
            android:id="@+id/ly_renglon_transaccion_monto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="@dimen/fragment_finanzas_cuentas_icon_saldo_w_h"
                android:layout_height="@dimen/fragment_finanzas_cuentas_icon_saldo_w_h"
                android:src="@drawable/registro_ic_nombre" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/fragment_finanzas_bancos_nombre_banco"
                android:textColor="@color/colorBitsafeBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_renglon_banco_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**************" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_renglon_transaccion_monto"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="@dimen/fragment_finanzas_cuentas_icon_saldo_w_h"
                android:layout_height="@dimen/fragment_finanzas_cuentas_icon_saldo_w_h"
                android:src="@drawable/ic_saldo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/fragment_finanzas_bancos_monto_total"
                android:textColor="@color/colorBitsafeBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_renglon_banco_monto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**************" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_renglon_banco_imagen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_banco_bogota" />


    </RelativeLayout>

</LinearLayout>