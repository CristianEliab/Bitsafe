<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_splash_screen"
        android:layout_width="@dimen/splash_iv_icono_w"
        android:layout_height="@dimen/splash_iv_icono_h"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/aplicacion_bitsafe" />

    <Button
        android:id="@+id/btn_splash_empesar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/start"
        android:background="@drawable/registro_figura_texto_redondo_registro"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorBitsafeBlue"/>

</RelativeLayout>